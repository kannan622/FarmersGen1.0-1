<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#FFFFFF"

    android:padding="5dp">


    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:text="View Cart"
            android:textColor="#666666"
            android:textSize="28sp"
            android:textStyle="bold" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_ViewCart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:divider="@android:color/transparent"
            android:dividerHeight="25px"
            android:padding="5dp" />

        <RelativeLayout
            android:id="@+id/rel1"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/recyclerView_ViewCart"
            android:layout_marginTop="25dp"
            android:background="#FFFFFF"
            android:padding="5dp">

            <ImageView
                android:id="@+id/spacecraftImg"
                android:layout_width="40dp"
                android:layout_height="40dp"


                android:layout_marginTop="8dp"

                android:src="@drawable/discount" />


            <TextView
                android:id="@+id/editprofile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"

                android:layout_toRightOf="@+id/spacecraftImg"
                android:padding="6dp"
                android:text="Apply Coupon Code"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/grey1"
                android:textSize="13sp"
                android:textStyle="bold"

                />

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"


                android:layout_marginTop="8dp"
                android:paddingRight="5dp"
                android:src="@drawable/arrow" />

            <ImageView
                android:id="@+id/couponCodeCancel"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="8dp"
                android:src="@drawable/cross"
                android:visibility="gone" />

        </RelativeLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rel1"
            android:background="@color/grey">

        </View>


        <TextView
            android:id="@+id/general"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view2"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:text="Bill Details"
            android:textColor="@color/grey_black"
            android:textStyle="bold" />


        <RelativeLayout
            android:id="@+id/rel5"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/general"
            android:layout_marginTop="5dp"
            android:background="#FFFFFF"
            android:padding="5dp">


            <TextView
                android:id="@+id/item_total_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"

                android:padding="8dp"
                android:text="Item Total"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/grey1"
                android:textSize="13sp"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/item_total_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="2dp"
                android:padding="8dp"
                android:text="$230"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/grey1"
                android:textSize="13sp"
                android:textStyle="bold"

                />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rel5"
            android:background="@color/grey">

        </View>

        <RelativeLayout
            android:id="@+id/rel_discount"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/rel5"
            android:layout_marginTop="5dp"
            android:background="#FFFFFF"
            android:padding="5dp">


            <TextView
                android:id="@+id/discount_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"

                android:padding="8dp"
                android:text="Discount "
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/grey1"
                android:textSize="13sp"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/discount_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="2dp"
                android:padding="8dp"
                android:text="$30"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/grey1"
                android:textSize="13sp"
                android:textStyle="bold"

                />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rel_discount"
            android:background="@color/grey">

        </View>

        <RelativeLayout
            android:id="@+id/rel_delivery"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/rel_discount"
            android:layout_marginTop="5dp"
            android:background="#FFFFFF"
            android:padding="5dp">


            <TextView
                android:id="@+id/delivery_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"

                android:padding="8dp"
                android:text="Delivery Charges"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/grey1"
                android:textSize="13sp"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/delivery_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="2dp"
                android:padding="8dp"
                android:text="$0"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/grey1"
                android:textSize="13sp"
                android:textStyle="bold"

                />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rel_delivery"
            android:background="@color/grey">

        </View>

        <RelativeLayout
            android:id="@+id/rel_grandtotal"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/rel_delivery"
            android:layout_marginTop="5dp"
            android:background="#FFFFFF"
            android:padding="5dp">


            <TextView
                android:id="@+id/grandtotal_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"

                android:padding="8dp"
                android:text="Grand Total"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/grey1"
                android:textSize="13sp"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/grandtotal_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="2dp"
                android:padding="8dp"
                android:text="$200"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/grey1"
                android:textSize="13sp"
                android:textStyle="bold"

                />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rel_grandtotal"
            android:background="@color/grey">

        </View>

        <RelativeLayout
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:layout_alignParentBottom="true"


            android:layout_marginBottom="-152dp"
            android:background="@color/grey_black"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/rupeeSymbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="To Pay : ₹ "
                android:textColor="@color/white"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/toPayAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/rupeeSymbol"
                android:fontFamily="sans-serif-condensed"
                android:text=""
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"


                android:background="@color/white">

            </View>


            <TextView
                android:id="@+id/viewCartProceed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:drawableRight="@drawable/arrow"
                android:drawablePadding="20dp"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:text="CHECKOUT"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold"

                />


        </RelativeLayout>


    </RelativeLayout>

    <ImageView
        android:id="@+id/emptyViewCartImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/empty_cart"
        android:visibility="gone" />

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/snackBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

    </android.support.design.widget.CoordinatorLayout>
</RelativeLayout>



